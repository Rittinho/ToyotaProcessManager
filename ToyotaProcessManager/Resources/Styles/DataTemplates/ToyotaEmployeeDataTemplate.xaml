<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:elements="clr-namespace:ToyotaProcessManager.MVVM.View.Components.Elements"
	xmlns:vm="clr-namespace:ToyotaProcessManager.MVVM.ViewModel.Pages.Main.Register"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <DataTemplate x:Key="ToastEmployeeStyle">
        <VerticalStackLayout>
            <Border StrokeShape="14"
                Padding="10,5,10,5"
                StrokeThickness="0"
                BackgroundColor="#323232">
                <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                    <!--Name-->
                    <Border StrokeShape="14"
                            Margin="5,0,5,0"
                            Padding="10"
                            StrokeThickness="0"
                            BackgroundColor="#222222">
                        <Label Text="{Binding Name}"
                               LineBreakMode="TailTruncation"                                                     
                               FontSize="25"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <!--Show-Button-->
                    <Button Grid.Column="1"
                            FontSize="20"
                            TextColor="White"
                            FontFamily="FAS"
                            CornerRadius="9999"
                            BackgroundColor="Transparent"
                            Command="{Binding Path=ShowEmployeeCommand, Source={RelativeSource AncestorType={x:Type vm:RegisterViewModel}}}"
                            CommandParameter="{Binding .}"
                            Text="{DynamicResource FAS_Eye}"/>
                    <!--Update-Button-->
                    <Button Grid.Column="2"
                            FontSize="20"
                            TextColor="White"
                            FontFamily="FAS"
                            CornerRadius="9999"
                            BackgroundColor="Transparent"
                            Command="{Binding Path=UpdateEmployeeCommand, Source={RelativeSource AncestorType={x:Type vm:RegisterViewModel}}}"
                            CommandParameter="{Binding .}"
                            Text="{DynamicResource FAS_Pen}"/>
                    <!--Delete-Button-->
                    <Button Grid.Column="3"
                            FontSize="20"
                            TextColor="White"
                            FontFamily="FAS"
                            CornerRadius="9999"
                            BackgroundColor="Transparent"
                            Command="{Binding Path=DeleteEmployeeCommand, Source={RelativeSource AncestorType={x:Type vm:RegisterViewModel}}}"
                            CommandParameter="{Binding .}"
                            Text="{DynamicResource FAS_Trash}"/>
                </Grid>
            </Border>
        </VerticalStackLayout>
    </DataTemplate>

    <DataTemplate x:Key="ToastEmployeeSelectStyle">
        <VerticalStackLayout>
            <Border StrokeShape="14"
             Padding="10,5,10,5"
             StrokeThickness="0"
             BackgroundColor="#323232">
                <Grid ColumnDefinitions="*,Auto,Auto">
                    <!--Name-->
                    <Border StrokeShape="14"
                         Margin="5,0,5,0"
                         Padding="10"
                         StrokeThickness="0"
                         BackgroundColor="#222222">
                        <Label Text="{Binding Name}"
                            LineBreakMode="TailTruncation"                                                     
                            FontSize="25"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>
                    </Border>
                    <!--Show-Button-->
                    <Button Grid.Column="1"
                         FontSize="20"
                         TextColor="White"
                         FontFamily="FAS"
                         CornerRadius="9999"
                         BackgroundColor="Transparent"
                         Command="{Binding Path=ShowEmployeeCommand, Source={RelativeSource AncestorType={x:Type vm:RegisterViewModel}}}"
                         CommandParameter="{Binding .}"
                         Text="{DynamicResource FAS_Eye}"/>
                    <!--Update-Button-->
                    <CheckBox Grid.Column="2"/>
                </Grid>
            </Border>
        </VerticalStackLayout>
    </DataTemplate>
</ResourceDictionary>