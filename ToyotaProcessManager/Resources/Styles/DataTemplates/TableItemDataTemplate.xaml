<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:elements="clr-namespace:ToyotaProcessManager.MVVM.View.Components.Elements"
                    xmlns:button="clr-namespace:ToyotaProcessManager.MVVM.View.Components.Button">

    <DataTemplate x:Key="TableItemData">

        <VerticalStackLayout>

            <Border BackgroundColor="#424242"
                    StrokeThickness="0"
                    StrokeShape="14"
                    Padding="10,5,10,5">

                <Label Text="{Binding Name}"
                       HorizontalTextAlignment="Center"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>

            </Border>
            
        </VerticalStackLayout>
        
    </DataTemplate>

</ResourceDictionary>