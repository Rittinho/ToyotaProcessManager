<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToyotaProcessManager.MVVM.View.Components.Elements.CircularIcon"
             x:Name="Root">

    <Border x:Name="externalBorder" 
            StrokeThickness="0"
            HeightRequest="{Binding Path=IconSize, Source={x:Reference Root}}"
            WidthRequest="{Binding Path=IconSize, Source={x:Reference Root}}"
            StrokeShape="1000000000000">

        <Border StrokeThickness="0"
            Background="#323232"
            StrokeShape="1000000000000">

            <Label FontFamily="FAS" 
                   x:Name="icon" 
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>

        </Border>

    </Border>

</ContentView>
