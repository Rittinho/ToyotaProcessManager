<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToyotaProcessManager.MVVM.View.Components.Buttons.SearchBar"
             x:Name="Root">

    <Border Style="{StaticResource Border.Radius14}"
            BackgroundColor="{StaticResource Primary}"
            HorizontalOptions="Fill"    
            Padding="5,0,0,0">

        <Grid ColumnDefinitions="*,Auto">

            <Entry Text="{Binding Path=SearchText, Source={x:Reference Root}}"/>

            <Button Grid.Column="1"
                    TextColor="{StaticResource PrimaryDarkText}"
                    Text="{StaticResource FAS_MagnifyingGlass}"
                    BackgroundColor="{StaticResource Tertiary}"
                    FontFamily="FAS"
                    CornerRadius="0"
                    Command="{Binding Path=Event, Source={x:Reference Root}}"/>

        </Grid>

    </Border>


</ContentView>
